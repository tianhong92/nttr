<div class="login form-auth" id="login">
  <% if user_session.errors.any? %>
    <%= render partial: 'shared/errors', locals: { object: user_session } %>
  <% end %>

  <%= form_for user_session, html: { class: 'clearfix form' } do |form| %>
    <div class="form-group vmargin-half">
      <%= form.text_field :login, class: 'form-control vmargin-half', placeholder: 'Username or email', autofocus: true %>
    </div>

    <div class="form-group clearfix vmargin-half">
      <%-# This form group should be side-by-side. %>
      <%= form.password_field :password, class: 'form-control pull-left login-password', placeholder: 'Password' %>
      <%= form.submit'Log in', class: 'btn btn-primary pull-right login-submit' %>
    </div>

    <div class="form-group vmargin-none">
      <%= form.label :remember_me, class: 'checkbox-inline' do %>
        <%= form.check_box :remember_me, class: 'checkbox', checked: true %>
        <%= 'Remember me' %>
      <% end %>
    </div>
  <% end %>
</div>
