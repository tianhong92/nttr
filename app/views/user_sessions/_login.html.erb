<div class="form login" id="login-form">

  <% if user_session.errors.any? %>
    <ul class="errors login__errors">
      <% user_session.errors.each do |attribute, message| %>
        <li class="login__error error">
          <%= content_tag :span, attribute, class: 'error__attribute' %>
          <%= content_tag :span, message, class: 'error__message' %>
        </li>
      <% end %>
    </ul>
  <% end %>

  <%= form_for user_session, html: { class: 'form-control' } do |form| %>
    <div class="form-group">
      <%= form.label :login, 'Username:' %>
      <%= form.text_field :login, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :password, 'Password:' %>
      <%= form.password_field :password, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :remember_me, class: 'sr-only' %>
      <%= form.check_box :remember_me, class: 'form-control' %>
    </div>
    
    <div class="form-group">
      <%= form.submit'Sign In', class: 'form-control' %>
    </div>
  <% end %>
</div>
